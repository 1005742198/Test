<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.obob.test.dao.PersonRoleRelationDao">
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO person_role_relation (
        	Id ,
        	PersonId ,
        	RoleId ,
        	CreateTime ,
        	CreateOperatorId ,
        	UpdateTime ,
        	UpdateOperatorId 
        ) VALUES (
        	#{id} ,
        	#{personId} ,
        	#{roleId} ,
        	#{createTime} ,
        	#{createOperatorId} ,
        	#{updateTime} ,
        	#{updateOperatorId} 
        )
    	<selectKey resultType="java.lang.Integer" keyProperty="id">
            select LAST_INSERT_ID() as id
        </selectKey>
	</insert>
    
	<update id="update">
        UPDATE person_role_relation SET
	        PersonId = #{personId} ,
	        RoleId = #{roleId} ,
	        CreateTime = #{createTime} ,
	        CreateOperatorId = #{createOperatorId} ,
	        UpdateTime = #{updateTime} ,
	        UpdateOperatorId = #{updateOperatorId} 
        WHERE 
	        Id = #{id} 
	</update>

    <delete id="delete" parameterType="java.util.Map">
        DELETE FROM person_role_relation WHERE
        Id = #{id} 
    </delete>
    
    <select id="getById" parameterType="java.util.Map" resultType="com.obob.test.po.PersonRoleRelationPo">
    	SELECT *
	    FROM person_role_relation 
        WHERE 
	        Id = #{id} 
	</select>
	
	<sql id="where">
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND Id = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(personId)">
				AND PersonId = #{personId}
			</if>
	       <if test="@Ognl@isNotEmpty(roleId)">
				AND RoleId = #{roleId}
			</if>
	       <if test="@Ognl@isNotEmpty(createTimeBegin)">
				AND CreateTime >= #{createTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(createTimeEnd)">
				AND CreateTime &lt;= #{createTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(createOperatorId)">
				AND CreateOperatorId = #{createOperatorId}
			</if>
	       <if test="@Ognl@isNotEmpty(updateTimeBegin)">
				AND UpdateTime >= #{updateTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(updateTimeEnd)">
				AND UpdateTime &lt;= #{updateTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(updateOperatorId)">
				AND UpdateOperatorId = #{updateOperatorId}
			</if>
		</where>
	</sql>

    <select id="select" parameterType="java.util.Map" resultType="com.obob.test.po.PersonRoleRelationPo">
    	SELECT *
	    FROM person_role_relation 
		<include refid="where"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

